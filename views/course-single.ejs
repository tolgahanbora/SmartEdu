            <div class="row"> 
                <div class="col-lg-9 blog-post-single">
                    <div class="blog-item">
						<div class="image-blog">
							<img src="/images/blog_single.jpg" alt="" class="img-fluid">
						</div>
						<div class="post-content">
							
							
							<% if(userID)  { %>
								<%  if (!(user.course.includes(course._id))) { %>
							<div class="post-date">
								<form method="post" action="/courses/enroll">
									<input name="course_id" type="hidden" value="<%= course._id %>" > 
								
									<button class="btn btn-lag btn-warning text-white" type="submit">ENROLL</button>
		
								</form>
